{
  "manifest_version": 3,
  "name": "WebcamViewer",
  "description": "View your webcam or capture card",
  "version": "1.1",
  "author": "ivomarsan",
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "icons": {
    "72": "icons/72.png",
    "128": "icons/128.png",
    "192": "icons/192.png"
  },
  "permissions": [
    "audioCapture",
    "videoCapture"
  ],
  "offline_enabled": true
}